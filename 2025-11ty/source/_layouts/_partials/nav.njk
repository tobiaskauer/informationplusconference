<nav class="navbar is-fixed-top is-primary" role="navigation" aria-label="main navigation">
  <div class="container">
    <div class="navbar-brand">
      <a class="navbar-item" href="{{ "/" | url }}">Information+ 2025</a>
      <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasic">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>
    <div id="navbarBasic" class="navbar-menu">
      <div class="navbar-end">
        {%- for link in main_nav %}
          <a class="navbar-item{% if page.url == link.url %} is-active{% endif %}" href="{{ link.url | url }}">
            {{ link.title }}
          </a>
        {%- endfor %}
        <div class="navbar-item has-dropdown is-hoverable is-right">
          <a class="navbar-link">More</a>
          <div class="navbar-dropdown is-right has-background-primary">
            {%- for link in more_nav %}
              <a class="navbar-item has-background-primary {% if page.url == link.url %} is-active{% endif %}" href="{{ link.url | url }}">
                {{ link.title }}
              </a>
            {%- endfor %}
            <div class="navbar-social">
              {%- for link in social_nav %}
                <a class="" href="{{ link.url | url }}">
                  {% include "../../../source/" + link.image.file %}
                </a>
              {%- endfor %}
            </div>
          </div>
        </div>
      </div>
